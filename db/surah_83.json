zil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5857,"text":"كِتَٰبٌۭ مَّرْقُومٌۭ","numberInSurah":9,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5858,"text":"وَيْلٌۭ يَوْمَئِذٍۢ لِّلْمُكَذِّبِينَ","numberInSurah":10,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5859,"text":"ٱلَّذِينَ يُكَذِّبُونَ بِيَوْمِ ٱلدِّينِ","numberInSurah":11,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5860,"text":"وَمَا يُكَذِّبُ بِهِۦٓ إِلَّا كُلُّ مُعْتَدٍ أَثِيمٍ","numberInSurah":12,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5861,"text":"إِذَا تُتْلَىٰ عَلَيْهِ ءَايَٰتُنَا قَالَ أَسَٰطِيرُ ٱلْأَوَّلِينَ","numberInSurah":13,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5862,"text":"كَلَّا ۖ بَلْ ۜ رَانَ عَلَىٰ قُلُوبِهِم مَّا كَانُوا۟ يَكْسِبُونَ","numberInSurah":14,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5863,"text":"كَلَّآ إِنَّهُمْ عَن رَّبِّهِمْ يَوْمَئِذٍۢ لَّمَحْجُوبُونَ","numberInSurah":15,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5864,"text":"ثُمَّ إِنَّهُمْ لَصَالُوا۟ ٱلْجَحِيمِ","numberInSurah":16,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5865,"text":"ثُمَّ يُقَالُ هَٰذَا ٱلَّذِى كُنتُم بِهِۦ تُكَذِّبُونَ","numberInSurah":17,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5866,"text":"كَلَّآ إِنَّ كِتَٰبَ ٱلْأَبْرَارِ لَفِى عِلِّيِّينَ","numberInSurah":18,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5867,"text":"وَمَآ أَدْرَىٰكَ مَا عِلِّيُّونَ","numberInSurah":19,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5868,"text":"كِتَٰبٌۭ مَّرْقُومٌۭ","numberInSurah":20,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5869,"text":"يَشْهَدُهُ ٱلْمُقَرَّبُونَ","numberInSurah":21,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5870,"text":"إِنَّ ٱلْأَبْرَارَ لَفِى نَعِيمٍ","numberInSurah":22,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5871,"text":"عَلَى ٱلْأَرَآئِكِ يَنظُرُونَ","numberInSurah":23,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5872,"text":"تَعْرِفُ فِى وُجُوهِهِمْ نَضْرَةَ ٱلنَّعِيمِ","numberInSurah":24,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5873,"text":"يُسْقَوْنَ مِن رَّحِيقٍۢ مَّخْتُومٍ","numberInSurah":25,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5874,"text":"خِتَٰمُهُۥ مِسْكٌۭ ۚ وَفِى ذَٰلِكَ فَلْيَتَنَافَسِ ٱلْمُتَنَٰفِسُونَ","numberInSurah":26,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5875,"text":"وَمِزَاجُهُۥ مِن تَسْنِيمٍ","numberInSurah":27,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5876,"text":"عَيْنًۭا يَشْرَبُ بِهَا ٱلْمُقَرَّبُونَ","numberInSurah":28,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5877,"text":"إِنَّ ٱلَّذِينَ أَجْرَمُوا۟ كَانُوا۟ مِنَ ٱلَّذِينَ ءَامَنُوا۟ يَضْحَكُونَ","numberInSurah":29,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5878,"text":"وَإِذَا مَرُّوا۟ بِهِمْ يَتَغَامَزُونَ","numberInSurah":30,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5879,"text":"وَإِذَا ٱنقَلَبُوٓا۟ إِلَىٰٓ أَهْلِهِمُ ٱنقَلَبُوا۟ فَكِهِينَ","numberInSurah":31,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5880,"text":"وَإِذَا رَأَوْهُمْ قَالُوٓا۟ إِنَّ هَٰٓؤُلَآءِ لَضَآلُّونَ","numberInSurah":32,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5881,"text":"وَمَآ أُرْسِلُوا۟ عَلَيْهِمْ حَٰفِظِينَ","numberInSurah":33,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5882,"text":"فَٱلْيَوْمَ ٱلَّذِينَ ءَامَنُوا۟ مِنَ ٱلْكُفَّارِ يَضْحَكُونَ","numberInSurah":34,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5883,"text":"عَلَى ٱلْأَرَآئِكِ يَنظُرُونَ","numberInSurah":35,"juz":30,"manzil":7,"page":589,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5884,"text":"هَلْ ثُوِّبَ ٱلْكُفَّارُ مَا كَانُوا۟ يَفْعَلُونَ","numberInSurah":36,"juz":30,"manzil":7,"page":589,"ruku":525,"hizbQuarter":235,"sajda":false}],"edition":{"identifier":"quran-uthmani","language":"ar","name":"Uthamani","englishName":"Uthamani","format":"text","type":"quran"}},{"number":83,"name":"سورة المطففين","englishName":"Al-Mutaffifin","englishNameTranslation":"Defrauding","revelationType":"Meccan","numberOfAyahs":36,"ayahs":[{"number":5849,"text":"Kecelakaan besarlah bagi orang-orang yang curang","numberInSurah":1,"juz":30,"manzil":7,"page":587,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5850,"text":"(yaitu) orang-orang yang apabila menerima takaran dari orang lain mereka minta dipenuhi,","numberInSurah":2,"juz":30,"manzil":7,"page":587,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5851,"text":"dan apabila mereka menakar atau menimbang untuk orang lain, mereka mengurangi.","numberInSurah":3,"juz":30,"manzil":7,"page":587,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5852,"text":"Tidaklah orang-orang itu menyangka, bahwa sesungguhnya mereka akan dibangkitkan,","numberInSurah":4,"juz":30,"manzil":7,"page":587,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5853,"text":"pada suatu hari yang besar,","numberInSurah":5,"juz":30,"manzil":7,"page":587,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5854,"text":"(yaitu) hari (ketika) manusia berdiri menghadap Tuhan semesta alam?","numberInSurah":6,"juz":30,"manzil":7,"page":587,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5855,"text":"Sekali-kali jangan curang, karena sesungguhnya kitab orang yang durhaka tersimpan dalam sijjin.","numberInSurah":7,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5856,"text":"Tahukah kamu apakah sijjin itu?","numberInSurah":8,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5857,"text":"(Ialah) kitab yang bertulis.","numberInSurah":9,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5858,"text":"Kecelakaan yang besarlah pada hari itu bagi orang-orang yang mendustakan,","numberInSurah":10,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5859,"text":"(yaitu) orang-orang yang mendustakan hari pembalasan.","numberInSurah":11,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5860,"text":"Dan tidak ada yang mendustakan hari pembalasan itu melainkan setiap orang yang melampaui batas lagi berdosa,","numberInSurah":12,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5861,"text":"yang apabila dibacakan kepadanya ayat-ayat Kami, ia berkata: \"Itu adalah dongengan orang-orang yang dahulu\"","numberInSurah":13,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5862,"text":"Sekali-kali tidak (demikian), sebenarnya apa yang selalu mereka usahakan itu menutupi hati mereka.","numberInSurah":14,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5863,"text":"Sekali-kali tidak, sesungguhnya mereka pada hari itu benar-benar tertutup dari (rahmat) Tuhan mereka.","numberInSurah":15,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5864,"text":"Kemudian, sesungguhnya mereka benar-benar masuk neraka.","numberInSurah":16,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5865,"text":"Kemudian, dikatakan (kepada mereka): \"Inilah azab yang dahulu selalu kamu dustakan\".","numberInSurah":17,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5866,"text":"Sekali-kali tidak, sesungguhnya kitab orang-orang yang berbakti itu (tersimpan) dalam 'Illiyyin.","numberInSurah":18,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5867,"text":"Tahukah kamu apakah 'Illiyyin itu?","numberInSurah":19,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5868,"text":"(Yaitu) kitab yang bertulis,","numberInSurah":20,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5869,"text":"yang disaksikan oleh malaikat-malaikat yang didekatkan (kepada Allah).","numberInSurah":21,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5870,"text":"Sesungguhnya orang yang berbakti itu benar-benar berada dalam kenikmatan yang besar (surga),","numberInSurah":22,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5871,"text":"mereka (duduk) di atas dipan-dipan sambil memandang.","numberInSurah":23,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5872,"text":"Kamu dapat mengetahui dari wajah mereka kesenangan mereka yang penuh kenikmatan.","numberInSurah":24,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5873,"text":"Mereka diberi minum dari khamar murni yang dilak (tempatnya),","numberInSurah":25,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5874,"text":"laknya adalah kesturi; dan untuk yang demikian itu hendaknya orang berlomba-lomba.","numberInSurah":26,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5875,"text":"Dan campuran khamar murni itu adalah dari tasnim,","numberInSurah":27,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5876,"text":"(yaitu) mata air yang minum daripadanya orang-orang yang didekatkan kepada Allah.","numberInSurah":28,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5877,"text":"Sesungguhnya orang-orang yang berdosa, adalah mereka yang menertawakan orang-orang yang beriman.","numberInSurah":29,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5878,"text":"Dan apabila orang-orang yang beriman lalu di hadapan mereka, mereka saling mengedip-ngedipkan matanya.","numberInSurah":30,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5879,"text":"Dan apabila orang-orang yang berdosa itu kembali kepada kaumnya, mereka kembali dengan gembira.","numberInSurah":31,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5880,"text":"Dan apabila mereka melihat orang-orang mukmin, mereka mengatakan: \"Sesungguhnya mereka itu benar-benar orang-orang yang sesat\",","numberInSurah":32,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5881,"text":"padahal orang-orang yang berdosa itu tidak dikirim untuk penjaga bagi orang-orang mukmin.","numberInSurah":33,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5882,"text":"Maka pada hari ini, orang-orang yang beriman menertawakan orang-orang kafir,","numberInSurah":34,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5883,"text":"mereka (duduk) di atas dipan-dipan sambil memandang.","numberInSurah":35,"juz":30,"manzil":7,"page":589,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5884,"text":"Sesungguhnya orang-orang kafir telah diberi ganjaran terhadap apa yang dahulu mereka kerjakan.","numberInSurah":36,"juz":30,"manzil":7,"page":589,"ruku":525,"hizbQuarter":235,"sajda":false}],"edition":{"identifier":"id.indonesian","language":"id","name":"Bahasa Indonesia","englishName":"Unknown","format":"text","type":"translation"}},{"number":83,"name":"سورة المطففين","englishName":"Al-Mutaffifin","englishNameTranslation":"Defrauding","revelationType":"Meccan","numberOfAyahs":36,"ayahs":[{"number":5849,"text":"Woe to those who give less [than due],","numberInSurah":1,"juz":30,"manzil":7,"page":587,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5850,"text":"Who, when they take a measure from people, take in full.","numberInSurah":2,"juz":30,"manzil":7,"page":587,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5851,"text":"But if they give by measure or by weight to them, they cause loss.","numberInSurah":3,"juz":30,"manzil":7,"page":587,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5852,"text":"Do they not think that they will be resurrected","numberInSurah":4,"juz":30,"manzil":7,"page":587,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5853,"text":"For a tremendous Day -","numberInSurah":5,"juz":30,"manzil":7,"page":587,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5854,"text":"The Day when mankind will stand before the Lord of the worlds?","numberInSurah":6,"juz":30,"manzil":7,"page":587,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5855,"text":"No! Indeed, the record of the wicked is in sijjeen.","numberInSurah":7,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5856,"text":"And what can make you know what is sijjeen?","numberInSurah":8,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5857,"text":"It is [their destination recorded in] a register inscribed.","numberInSurah":9,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5858,"text":"Woe, that Day, to the deniers,","numberInSurah":10,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5859,"text":"Who deny the Day of Recompense.","numberInSurah":11,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5860,"text":"And none deny it except every sinful transgressor.","numberInSurah":12,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5861,"text":"When Our verses are recited to him, he says, \"Legends of the former peoples.\"","numberInSurah":13,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5862,"text":"No! Rather, the stain has covered their hearts of that which they were earning.","numberInSurah":14,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5863,"text":"No! Indeed, from their Lord, that Day, they will be partitioned.","numberInSurah":15,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5864,"text":"Then indeed, they will [enter and] burn in Hellfire.","numberInSurah":16,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5865,"text":"Then it will be said [to them], \"This is what you used to deny.\"","numberInSurah":17,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5866,"text":"No! Indeed, the record of the righteous is in 'illiyyun.","numberInSurah":18,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5867,"text":"And what can make you know what is 'illiyyun?","numberInSurah":19,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5868,"text":"It is [their destination recorded in] a register inscribed","numberInSurah":20,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5869,"text":"Which is witnessed by those brought near [to Allah].","numberInSurah":21,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5870,"text":"Indeed, the righteous will be in pleasure","numberInSurah":22,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5871,"text":"On adorned couches, observing.","numberInSurah":23,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5872,"text":"You will recognize in their faces the radiance of pleasure.","numberInSurah":24,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5873,"text":"They will be given to drink [pure] wine [which was] sealed.","numberInSurah":25,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5874,"text":"The last of it is musk. So for this let the competitors compete.","numberInSurah":26,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5875,"text":"And its mixture is of Tasneem,","numberInSurah":27,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5876,"text":"A spring from which those near [to Allah] drink.","numberInSurah":28,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5877,"text":"Indeed, those who committed crimes used to laugh at those who believed.","numberInSurah":29,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5878,"text":"And when they passed by them, they would exchange derisive glances.","numberInSurah":30,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5879,"text":"And when they returned to their people, they would return jesting.","numberInSurah":31,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5880,"text":"And when they saw them, they would say, \"Indeed, those are truly lost.\"","numberInSurah":32,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5881,"text":"But they had not been sent as guardians over them.","numberInSurah":33,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5882,"text":"So Today those who believed are laughing at the disbelievers,","numberInSurah":34,"juz":30,"manzil":7,"page":588,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5883,"text":"On adorned couches, observing.","numberInSurah":35,"juz":30,"manzil":7,"page":589,"ruku":525,"hizbQuarter":235,"sajda":false},{"number":5884,"text":"Have the disbelievers [not] been rewarded [this Day] for what they used to do?","numberInSurah":36,"juz":30,"manzil":7,"page":589,"ruku":525,"hizbQuarter":235,"sajda":false}],"edition":{"identifier":"en.sahih","language":"en","name":"Saheeh International","englishName":"Saheeh International","format":"text","type":"translation"}}]}